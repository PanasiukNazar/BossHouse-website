doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title BossHouse
        link(rel="stylesheet", href="/assets/styles/style.css")
        link(rel="stylesheet", href="/assets/styles/animate.css-master/animate.min.css")
        link(rel="stylesheet", href="/assets/images/logo-white-nb.png")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css")
    body(style="height: 100vh; display: flex; flex-direction: column")
        include includes/navbar-dark

        div(class="main" style="flex: 1")
            div(class="container")
                    div(class="contacts")
                        h3 Контакти
                        div(class="row")
                            div(class="col-md-6")
                                div(class="label")
                                    i(class="bi bi-geo-alt-fill")
                                    span Наша адреса
                                span(class="label__value") м.Рівне, вул.Петра Могили,28

                            div(class="col-md-6")
                                div(class="label")
                                    i(class="bi bi-telephone-fill")
                                    span Телефон: 
                                span(class="label__value") +38 (097) 000 30 28

                        div(class="row")
                            div(class="col-md-6")
                                div(class="label")
                                    i(class="bi bi-clock-fill")
                                    span Графік роботи: 
                                span(class="label__value") пн.-пт. З 8:00 до 17:00

                            div(class="col-md-6")
                                div(class="label")
                                    i(class="bi bi-envelope-fill")
                                    span e-mail: 
                                span(class="label__value") boss-house@meta.ua
                 
        include includes/footer-dark
        include includes/cart-popup
          
            script(src="/js/custom.js")
            script(src="/js/cart.js")

